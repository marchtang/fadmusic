<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.fadmusic.MainActivity">

    <ScrollView
        android:id="@+id/main_activity_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
       <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_alignParentTop="true"
         android:layout_alignParentStart="true">

           <TextView
             style="@style/new_album"
             android:id="@+id/textView" />
           <ImageView
            style="@style/album_cover"
            android:src="@drawable/timg"
            android:id="@+id/imageView" />
           <View
               style="@style/view"/>

           <TextView
            android:id="@+id/hot_album"
            style="@style/Hot_album"/>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
              <ImageView
                  style="@style/hot_album_cover"
                  android:src="@drawable/ic_album_black_24dp"
                  android:id="@+id/hot_album1" />
              <ImageView
                style="@style/hot_album_cover"
                android:src="@drawable/ic_album_black_24dp"
                android:id="@+id/hot_album2"/>
              <ImageView
                style="@style/hot_album_cover"
                android:src="@drawable/ic_album_black_24dp"
                android:id="@+id/hot_album3"/>
           </LinearLayout>
           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
               <TextView
                   style="@style/album_introduce"
                   android:id="@+id/albumname1" />
               <TextView
                   style="@style/album_introduce"
                   android:id="@+id/albumname2" />
               <TextView
                   style="@style/album_introduce"
                   android:id="@+id/albumname3" />
           </LinearLayout>
           <View
               style="@style/view"/>
           <TextView
               android:id="@+id/youlike"
               style="@style/Maybe_you_like"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   style="@style/hot_album_cover"
                   android:src="@drawable/ic_album_black_24dp"
                   android:id="@+id/like_album1" />

               <ImageView
                   style="@style/hot_album_cover"
                   android:src="@drawable/ic_album_black_24dp"
                   android:id="@+id/like_album2"/>
               <ImageView
                   style="@style/hot_album_cover"
                   android:src="@drawable/ic_album_black_24dp"
                   android:id="@+id/like_album3"/>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   style="@style/album_introduce"
                   android:id="@+id/albumname4" />
               <TextView
                   style="@style/album_introduce"
                   android:id="@+id/albumname5" />
               <TextView
                   style="@style/album_introduce"
                   android:id="@+id/albumname6" />
           </LinearLayout>
       </LinearLayout>
    </ScrollView>
</RelativeLayout>
