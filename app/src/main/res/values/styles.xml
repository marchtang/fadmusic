<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Image new Cover-->
    <style name="album_cover">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">280dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <!--word of new album-->
    <style name="new_album">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#607d8b</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">New album</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">8dp</item>
     </style>
    <!--word of HOT song-->
    <style name="Hot_album">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">Hot album</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <!--Image album Cover-->
    <style name="hot_album_cover">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--word of album Cover-->
    <style name="album_introduce">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">confusion Edison</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!--word of you like-->
    <style name="Maybe_you_like">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#f44336</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">you like album</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <!--VIEW-->
    <style name="view">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">2dp</item>
    <item name="android:background">#9E9E9E9E</item>
    <item name="android:layout_marginTop">10dp</item>
     <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="new_album_cover">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


</resources>
